.card {
	display: flex;
	flex-direction: column
	justify-content: center
	align-items: center
  width: 250px
	height: 300px
	background-color: #a5b1c2
	margin: 20px
	padding: 10px 0 0 0
	border-radius: 6px
	box-shadow: 0 3px 6px rgba(0,0,0,0.16), 0 3px 6px rgba(0,0,0,0.23);
}

.card__img {
	border-radius: 10px
}

.card__title {
	color: #ffffff
	font-size: 18px	
}

.card__price {
	color: #ffffff
	font-size: 16px	
}