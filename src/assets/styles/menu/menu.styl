.menu {
	width 100%
	height 100px
	background-color #3867d6
}

.menu__wrapper {
	margin: 0 auto
	display: flex 
	justify-content: space-between 
	align-items: center
	max-width: 1200px
}

.menu__logo-icon  {
	width: 200px
	padding: 10px
	margin-left: 20px
}

.menu__checkout-block {
	position: relative	
}

.menu__checkout-block__badge {
	position: absolute
	background-color: #e84118
	border-radius: 50%
	color: #ffffff
	padding: 5px 10px
	font-size: 11px
	top: 10px
	right: 20px
}

.menu__checkout-block__checkout-icon {
  width: 48px
	padding: 12px
	margin-right: 20px
}